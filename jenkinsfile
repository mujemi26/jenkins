pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'dockerhub-credentials'
        DOCKER_IMAGE_NAME = 'mujimmy/lab-app'
        GITHUB_REPO_URL = 'https://github.com/mujemi26/jenkins.git'
        KIND_CLUSTER_NAME = 'kind-kind'
        KUBECONFIG_FILE = 'kind-kubeconfig'
    }

    stages {
        stage('Validate Environment') {
            steps {
                sh '''
                    echo "Checking required tools..."
                    docker version
                    kubectl version --client
                    kind version
                    
                    echo "Checking cluster status..."
                    kind get clusters
                '''
            }
        }

        stage('Checkout Code') {
            steps {
                checkout scm // More flexible than direct git checkout
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    try {
                        sh """
                            echo "Building image: ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}"
                            docker build -t ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER} . || exit 1
                        """
                    } catch (Exception e) {
                        error "Docker build failed: ${e.message}"
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    try {
                        withDockerRegistry([credentialsId: 'dockerhub-credentials', url: '']) {
                            sh """
                                echo "Pushing images to Docker Hub..."
                                docker push ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}
                                docker tag ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER} ${DOCKER_IMAGE_NAME}:latest
                                docker push ${DOCKER_IMAGE_NAME}:latest
                            """
                        }
                    } catch (Exception e) {
                        error "Failed to push to Docker Hub: ${e.message}"
                    }
                }
            }
        }

        stage('Deploy to Kind Cluster') {
            options {
                timeout(time: 10, unit: 'MINUTES')
            }
            steps {
                script {
                    withCredentials([file(credentialsId: 'kind-kubeconfig', variable: 'KUBECONFIG_FILE')]) {
                        sh """
                            # Export kubeconfig to use with kubectl
                            export KUBECONFIG=${KUBECONFIG_FILE}

                            # Verify cluster exists
                            if ! kind get clusters | grep -q ${KIND_CLUSTER_NAME}; then
                                echo "Creating new Kind cluster..."
                                kind create cluster --name ${KIND_CLUSTER_NAME}
                            fi

                            # Get and verify context
                            CONTEXT_NAME=\$(kubectl config get-contexts -o name | grep ${KIND_CLUSTER_NAME})
                            echo "Using context: \${CONTEXT_NAME}"
                            kubectl config use-context \${CONTEXT_NAME}

                            # Load image to Kind
                            echo "Loading image to Kind cluster..."
                            kind load docker-image ${DOCKER_IMAGE_NAME}:${BUILD_NUMBER} --name ${KIND_CLUSTER_NAME}

                            # Create and apply deployment
                            cat > deployment.yaml << EOF
apiVersion: apps/v1
kind: Deployment
metadata:
  name: lab-app-deployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: lab-app
  template:
    metadata:
      labels:
        app: lab-app
    spec:
      containers:
      - name: lab-app
        image: ${DOCKER_IMAGE_NAME}:${BUILD_NUMBER}
        ports:
        - containerPort: 80
        readinessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: lab-app-service
spec:
  type: NodePort
  selector:
    app: lab-app
  ports:
    - port: 80
      targetPort: 80
      nodePort: 30080
EOF

                            # Apply and verify deployment
                            kubectl apply -f deployment.yaml
                            kubectl rollout status deployment/lab-app-deployment --timeout=300s
                            
                            echo "Deployment Status:"
                            kubectl get deployments,services,pods -o wide
                        """
                    }
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    sh """
                        export KUBECONFIG=${KUBECONFIG_FILE}
                        
                        # Wait for pods to be ready
                        kubectl wait --for=condition=ready pods -l app=lab-app --timeout=300s
                        
                        echo "Application should be accessible at http://localhost:30080"
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Deployment completed successfully!"
            sh """
                export KUBECONFIG=${KUBECONFIG_FILE}
                echo "Final Deployment Status:"
                kubectl get pods -o wide
                kubectl get services
            """
        }
        failure {
            echo "Deployment failed. Check logs."
            sh """
                export KUBECONFIG=${KUBECONFIG_FILE}
                echo "Pod Status:"
                kubectl get pods
                kubectl describe pods
            """
        }
        always {
            sh """
                echo "Cleaning up resources..."
                docker rmi ${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER} || true
                docker rmi ${DOCKER_IMAGE_NAME}:latest || true
                docker logout
                docker image prune -f
            """
            cleanWs()
        }
    }
}
